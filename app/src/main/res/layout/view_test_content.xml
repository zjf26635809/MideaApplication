<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/view_test_content_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/list_background_dark"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/view_test_content_tv_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/view_test_content_tv_name"
            android:textColor="@color/list_background_dark"
            android:textSize="14sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/view_test_content_tv_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/list_background_dark"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone"
              />


        <TextView
            android:id="@+id/view_test_content_tv_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="6dp"
            android:text="数据日志"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorPrimaryDarkTheme"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/view_test_content_tv_des1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/view_test_content_tv_log"
            android:layout_marginTop="6dp"
            android:textColor="@color/colorPrimaryDarkTheme"
            android:textSize="12sp"
            />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/view_test_content_scroll"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/round_grey_light"
        android:padding="10dp">

        <TextView
            android:id="@+id/view_test_content_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/darkgray"
            android:textSize="13sp" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/view_test_content_layout_correct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="校准值："
            android:textColor="@color/darkgray"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/view_test_content_ed_correct"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/rect_grey_light"
            android:inputType="number"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/darkgray"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/view_test_content_tv_correct"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/round_grey"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="校准"
            android:textColor="@color/white"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="15dp">


        <TextView
            android:id="@+id/view_test_content_tv_start"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:background="@drawable/round_grey"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="启动"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/view_test_content_tv_stop"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginLeft="45dp"
            android:background="@drawable/round_grey"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="停止"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>
</LinearLayout>
